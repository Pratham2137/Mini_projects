<%- include('partials/header.ejs') %>
    <main>
        <div class="app">
            <div class="nav_head">
                <div class="nav_title">
                    <h1>TODO APP</h1>
                </div>
                <div class="nav_btn">
                    <li class="links"><a class="nav_link" href="/home">Home</a>
                    </li>
                    <li class="links"><a class="nav_link" href="/work">Work</a></li>
                </div>
            </div>
            <div class="task_list">
                <div class="form_list">
                    <% if (page==="/home" ) {%>
                        <form action="/home" method="POST">
                            <div>
                                <h1>
                                    <%= currentDay %>
                                </h1>
                            </div>
                            <% } else { %>
                                <form action="/work" method="POST">
                                    <div>
                                        <h1>Work List</h1>
                                    </div>
                                    <% } %>
                                        <input class="enter_text" type="text" name="newItem"
                                            placeholder="Add New Task ..." required autofocus>
                                </form>
                </div>
                <div class="itemList">
                    <ul>
                        <% for (let i=0; i<todo.length; i++) { %>
                            <li>
                                <div>
                                    <input class="form-check-input" type="checkbox" id="checkdefalut">
                                    <label class="form-check-label text-white strikethrough" for="checkdefalut">
                                        <%= todo[i] %>
                                    </label>
                                </div>
                            </li>
                            <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer.ejs') %>